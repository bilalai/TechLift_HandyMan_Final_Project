@model IEnumerable<TechLift_HandyMan_Final_Project.Models.Sub_Services>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Sub-Services</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sub_Service_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sub_Service_Descr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sub_Service_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sub_Service_Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Service_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Service_Descr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Service_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sub_Service_Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
